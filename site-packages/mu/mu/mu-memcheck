#!/bin/sh

export G_SLICE=always-malloc
export G_DEBUG=gc-friendly

libtool --mode=execute valgrind --tool=memcheck --leak-check=full --show-possibly-lost=no --leak-resolution=med --track-origins=yes --num-callers=20 --log-file='/home/renat/emacs/site-packages/mu/mu-%p.vgdump' /home/renat/emacs/site-packages/mu/mu/mu $@
